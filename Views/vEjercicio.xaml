<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="acalderonFitPause.Views.vEjercicio"
             Title="Mis Ejercicios"
             BackgroundColor="#F3F4F6">

    <Grid RowDefinitions="*,Auto">

        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="0" Spacing="0">

                <Grid BackgroundColor="#2563FF"
                      Padding="16,24,16,16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="24" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="260" />
                        <ColumnDefinition Width="40" />
                    </Grid.ColumnDefinitions>

                    <ImageButton x:Name="btnAtras"
                                 Grid.Row="0"
                                 Grid.Column="0"
                                 WidthRequest="24"
                                 HeightRequest="24"
                                 BackgroundColor="Transparent"
                                 Source="regresar_icono.png"
                                 Clicked="btnAtras_Clicked" />

                    <Label x:Name="lblTituloMisEjercicios"
                           Grid.Row="0"
                           Grid.Column="1"
                           Text="Mis Ejercicios"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="White"
                           VerticalOptions="Center" />

                    <ImageButton x:Name="btnAgregarEjercicio"
                                 Grid.Row="0"
                                 Grid.Column="2"
                                 WidthRequest="24"
                                 HeightRequest="24"
                                 BackgroundColor="Transparent"
                                 Source="agregar_icono.png"
                                 Clicked="btnAgregarEjercicio_Clicked" />

                    <Label x:Name="lblCantidadEjercicios"
                           Grid.Row="1"
                           Grid.Column="1"
                           Text="0 ejercicios disponibles"
                           FontSize="14"
                           TextColor="White"
                           Opacity="0.9"
                           VerticalOptions="Center" />
                </Grid>

                <VerticalStackLayout Padding="16" Spacing="16">

                    <Frame CornerRadius="16"
                           HasShadow="False"
                           Padding="0"
                           BackgroundColor="White">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="180" />
                                <RowDefinition Height="70" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Image x:Name="imgBannerEjercicio"
                                       Source="portada.png"
                                       Aspect="AspectFill" />
                                <BoxView BackgroundColor="Black"
                                         Opacity="0.25" />

                                <StackLayout Orientation="Vertical"
                                             Padding="20"
                                             VerticalOptions="End"
                                             Spacing="4">
                                    <Label x:Name="lblBannerTitulo"
                                           Text="Ejercicio Recomendado"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="White" />
                                    <Label x:Name="lblBannerDescripcion"
                                           Text="Rutina rÃ¡pida de 5 minutos"
                                           FontSize="14"
                                           TextColor="White" />
                                </StackLayout>
                            </Grid>

                            <Grid Grid.Row="1"
                                  Padding="16,8,16,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="320" />
                                </Grid.ColumnDefinitions>

                                <Button x:Name="btnComenzarRutina"
                                        Grid.Column="0"
                                        Text="Comenzar Rutina"
                                        BackgroundColor="#2563FF"
                                        TextColor="White"
                                        CornerRadius="10"
                                        HeightRequest="36"
                                        Clicked="btnComenzarRutina_Clicked">
                                    <Button.ImageSource>
                                        <FileImageSource File="rutina_icono.png" />
                                    </Button.ImageSource>
                                </Button>
                            </Grid>
                        </Grid>
                    </Frame>

                    <CollectionView x:Name="cvEjercicios"
                                    SelectionMode="Single"
                                    SelectionChanged="cvElegirEjercicio">

                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame CornerRadius="16"
                                       HasShadow="False"
                                       Padding="16"
                                       Margin="0,0,0,12"
                                       BackgroundColor="White"
                                       BorderColor="#E5E7EB">

                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnEjercicioTapped" />
                                    </Frame.GestureRecognizers>

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="28" />
                                            <RowDefinition Height="24" />
                                            <RowDefinition Height="36" />
                                            <RowDefinition Height="30" />
                                            <RowDefinition Height="44" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40" />
                                            <ColumnDefinition Width="248" />
                                            <ColumnDefinition Width="32" />
                                        </Grid.ColumnDefinitions>

                                        <Frame Grid.Row="0"
                                               Grid.RowSpan="3"
                                               Grid.Column="0"
                                               WidthRequest="40"
                                               HeightRequest="40"
                                               CornerRadius="20"
                                               Padding="8"
                                               HasShadow="False"
                                               BackgroundColor="#EBF5FF"
                                               VerticalOptions="Start">
                                            <Image x:Name="imgIconoEjercicio"
                                                   Source="edisponible_icono.png"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center"
                                                   WidthRequest="20"
                                                   HeightRequest="20" />
                                        </Frame>

                                        <StackLayout Grid.Row="0"
                                                     Grid.Column="1"
                                                     Orientation="Horizontal"
                                                     VerticalOptions="Center">
                                            <Label x:Name="lblNombreEjercicio"
                                                   Text="{Binding Nombre}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="#111827" />
                                        </StackLayout>

                                        <Label x:Name="lblCategoriaEjercicio"
                                               Grid.Row="1"
                                               Grid.Column="1"
                                               Text="{Binding Categoria}"
                                               FontSize="14"
                                               TextColor="#6B7280" />

                                        <Label x:Name="lblDescripcionEjercicio"
                                               Grid.Row="2"
                                               Grid.Column="1"
                                               Grid.ColumnSpan="2"
                                               Text="{Binding Descripcion}"
                                               FontSize="14"
                                               TextColor="#6B7280" />

                                        <StackLayout Grid.Row="3"
                                                     Grid.Column="1"
                                                     Orientation="Horizontal"
                                                     Spacing="6"
                                                     VerticalOptions="Center">
                                            <Image x:Name="imgReloj"
                                                   Source="duracion_icono.png"
                                                   WidthRequest="16"
                                                   HeightRequest="16" />
                                            <Label x:Name="lblDuracionEjercicio"
                                                   Text="{Binding Duracion}"
                                                   FontSize="14"
                                                   TextColor="#6B7280" />
                                            <Label x:Name="lblTextoMinutos"
                                                   Text="min"
                                                   FontSize="14"
                                                   TextColor="#6B7280" />
                                        </StackLayout>

                                        <StackLayout Grid.Row="4"
                                                     Grid.Column="1"
                                                     Grid.ColumnSpan="2"
                                                     Orientation="Horizontal"
                                                     Spacing="8">
                                            <Button x:Name="btnEditarEjercicio"
                                                    Text="Editar"
                                                    BackgroundColor="Transparent"
                                                    BorderColor="#E5E7EB"
                                                    BorderWidth="1"
                                                    TextColor="#374151"
                                                    CornerRadius="8"
                                                    Padding="12,6"
                                                    Clicked="btnEditarEjercicio_Clicked"
                                                    CommandParameter="{Binding .}">
                                                <Button.ImageSource>
                                                    <FileImageSource File="editar_icono.png" />
                                                </Button.ImageSource>
                                            </Button>

                                            <Button x:Name="btnEliminarEjercicio"
                                                    Text="Eliminar"
                                                    BackgroundColor="Transparent"
                                                    BorderColor="#FEE2E2"
                                                    BorderWidth="1"
                                                    TextColor="#EF4444"
                                                    CornerRadius="8"
                                                    Padding="12,6"
                                                    Clicked="btnEliminarEjercicio_Clicked"
                                                    CommandParameter="{Binding .}">
                                                <Button.ImageSource>
                                                    <FileImageSource File="eliminar_icono.png" />
                                                </Button.ImageSource>
                                            </Button>
                                        </StackLayout>

                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

        <Border Grid.Row="1"
                Background="White"
                Stroke="#E5E7EB"
                StrokeThickness="1">
            <HorizontalStackLayout Padding="20,8"
                                   Spacing="5"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center">

                <Button x:Name="btnMenuInicio"
                        Text="Inicio"
                        FontSize="12"
                        BackgroundColor="Transparent"
                        TextColor="#6B7280"
                        Clicked="btnMenuInicio_Clicked"/>

                <Button x:Name="btnMenuMonitor"
                        Text="Monitor"
                        FontSize="12"
                        BackgroundColor="Transparent"
                        TextColor="#6B7280"
                        Clicked="btnMenuMonitor_Clicked"/>

                <Button x:Name="btnMenuEjercicio"
                        Text="Ejercicios"
                        FontSize="12"
                        BackgroundColor="Transparent"
                        TextColor="#2563FF"
                        Clicked="btnMenuEjercicio_Clicked"/>

                <Button x:Name="btnMenuHistorial"
                        Text="Historial"
                        FontSize="12"
                        BackgroundColor="Transparent"
                        TextColor="#6B7280"
                        Clicked="btnMenuHistorial_Clicked"/>

                <Button x:Name="btnMenuAjustes"
                        Text="Ajustes"
                        FontSize="12"
                        BackgroundColor="Transparent"
                        TextColor="#6B7280"
                        Clicked="btnMenuAjustes_Clicked"/>
            </HorizontalStackLayout>
        </Border>

    </Grid>

</ContentPage>
