<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="acalderonFitPause.Views.vRealizaEjercicio"
             Title="Rutina en curso"
             BackgroundColor="#F3F4F6">

    <VerticalStackLayout Padding="24" Spacing="24">

        <Label x:Name="lblTitulo"
               Text="Pausa en curso"
               FontSize="22"
               FontAttributes="Bold"
               TextColor="#111827" />

        <Label x:Name="lblNombreEjercicio"
               Text="Ejercicio"
               FontSize="18"
               TextColor="#2563FF" />

        <Label Text="En pausa activa durante:"
               FontSize="14"
               TextColor="#6B7280" />

        <Label x:Name="lblSegundos"
               Text="0 s"
               FontSize="48"
               HorizontalTextAlignment="Center"
               TextColor="#10B981" />

        <Button x:Name="btnFinalizar"
                Text="Finalizar"
                HeightRequest="48"
                CornerRadius="12"
                BackgroundColor="#2563FF"
                TextColor="White"
                Clicked="btnFinalizar_Clicked" />

        <Button Text="Cancelar"
                HeightRequest="40"
                CornerRadius="12"
                BackgroundColor="#2563FF"
                TextColor="White"
                Clicked="btnCancelar_Clicked" />

    </VerticalStackLayout>
</ContentPage>
