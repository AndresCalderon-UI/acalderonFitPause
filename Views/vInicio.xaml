<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="acalderonFitPause.Views.vInicio"
             BackgroundColor="#2563FF">
    <ScrollView>
        <VerticalStackLayout Padding="24"
                             Spacing="20">


            <Image Source="logo.png" 
                       HeightRequest="100"
                       Aspect="AspectFit"
                       />

            <!-- App Name -->
            <Label Text="FitPause" 
                   FontSize="48"
                   TextColor="White"
                   HorizontalTextAlignment="Center"
                   Margin="0,20,0,0"/>

            <!-- Tagline -->
            <Label Text="Tu salud empieza con una pausa" 
                   FontSize="20"
                   TextColor="White"
                   Opacity="0.9"
                   HorizontalTextAlignment="Center"/>

            <!-- Hero Image -->
            <Image Source="portada.png" 
                   HeightRequest="100"
                   Aspect="AspectFill"
                   Margin="0,20,0,0"/>

            <!-- Description -->
            <Label Text="Detecta tu inactividad y te recuerda tomar pausas saludables" 
                   FontSize="16"
                   TextColor="White"
                   Opacity="0.8"
                   HorizontalTextAlignment="Center"
                   Margin="0,30,0,0"/>

            <!-- Get Started Button -->
            <Button Text="Comenzar" 
                    BackgroundColor="White"
                    TextColor="#2563FF"
                    CornerRadius="25"
                    HeightRequest="50"
                    Margin="0,10,0,0"
                    Clicked="Comienzo_Clicked"/>

            <!-- Features List -->
            <VerticalStackLayout Spacing="10" Margin="0,20,0,0" Opacity="0.75">
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <BoxView WidthRequest="8" 
                            HeightRequest="8" 
                            CornerRadius="4"
                            BackgroundColor="White"
                            VerticalOptions="Center"/>
                    <Label Text="Ejercicios sencillos" 
                           TextColor="White"
                           FontSize="14"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <BoxView WidthRequest="8" 
                            HeightRequest="8" 
                            CornerRadius="4"
                            BackgroundColor="White"
                            VerticalOptions="Center"/>
                    <Label Text="Detección automática" 
                           TextColor="White"
                           FontSize="14"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <BoxView WidthRequest="8" 
                            HeightRequest="8" 
                            CornerRadius="4"
                            BackgroundColor="White"
                            VerticalOptions="Center"/>
                    <Label Text="Historial de pausas" 
                           TextColor="White"
                           FontSize="14"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>